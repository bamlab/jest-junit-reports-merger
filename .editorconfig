root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,py,ts}]
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.ts]
indent_style = space
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2